@model SMS.Web.Models.DTO.AcademicYearDTO.CreateAcademicYearDTO

@{
    ViewData["Title"] = "جدید";
}
<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="YearTilte" class="control-label"></label>
                <input asp-for="YearTilte" class="form-control" />
                <span asp-validation-for="YearTilte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
            <button type="submit"  class="btn btn-primary">ذخیره</button> | 
            <a class="btn btn-secondary" asp-controller="AcademicYear" asp-action="Index">انصراف</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
