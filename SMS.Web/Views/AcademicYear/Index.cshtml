@model IEnumerable<SMS.Web.Models.DTO.AcademicYearDTO.IndexAcademicYearDTO>

@{
    ViewData["Title"] = "فهرست";
}

<h3>سال تحصیلی</h3>

<p>
    <a asp-action="Create" class="btn btn-primary">افزودن</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.YearTilte)</th>
        <th>@Html.DisplayNameFor(model => model.IsDeleted)</th>
        <th>عملیات</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.YearTilte)</td>

            <td>
                <a asp-action="Details" class="btn btn-outline-primary btn-sm" asp-route-id="@item.Id">جزئیات</a> |
                @if (!item.IsDeleted)
                {
                    <a class="btn btn-warning btn-sm">فعال</a>
                }
                else
                {
                    <a class="btn btn-outline-warning btn-sm">غیرفعال</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>